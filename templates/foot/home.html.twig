{% extends 'base.html.twig' %}

{% block body %}
    {% for match in data %}
        {% dump(match) %}
        <div class="row">
            <div class="card col">
                <img class="card-img-top" src="{{ match.teams.home.logo }}" alt="{{ match.teams.home.name }}">
                <div class="card-body"><h5>{{ match.teams.home.name }}</h5></div>
                <div class="card-footer">Score: {{ match.goals.home }}</div>
            </div>
            <div class="col text-bold text-center">VS</div>
            <div class="card col">
                <img class="card-img-top" src="{{ match.teams.away.logo }}" alt="{{ match.teams.home.name }}">
                <div class="card-body"><h5>{{ match.teams.away.name }}</h5></div>
                <div class="card-footer">Score: {{ match.goals.away }}</div>
            </div>
        </div>
    {% endfor %}
{% endblock body %}
