{% extends 'base.html.twig' %}

{% block body %}
    {% for fixture in fixtures %}
        <div {{ stimulus_controller('fixture', {
            detailUrl: path('foot_details', {'fixtureId': fixture.fixture.id})
        }) }} data-fixture-id-value="{{ fixture.fixture.id }}">
            <h4 class="text-center">
                <button
                    {{ stimulus_action('fixture', 'showDetails') }}
                >{{ fixture.league.name }} - {{ fixture.league.round }}</button>
            </h4>
            <div class="row">
                <div class="card col">
                    <img class="card-img-top" src="{{ fixture.teams.home.logo }}" alt="{{ fixture.teams.home.name }}">
                    <div class="card-body"><h5>{{ fixture.teams.home.name }}</h5></div>
                    <div class="card-footer">Score: {{ fixture.goals.home }}</div>
                </div>
                <div class="col text-bold text-center">VS</div>
                <div class="card col">
                    <img class="card-img-top" src="{{ fixture.teams.away.logo }}" alt="{{ fixture.teams.home.name }}">
                    <div class="card-body"><h5>{{ fixture.teams.away.name }}</h5></div>
                    <div class="card-footer">Score: {{ fixture.goals.away }}</div>
                </div>
            </div>
        </div>
    {% endfor %}
    {{ include('components/modal.html.twig') }}
{% endblock body %}
